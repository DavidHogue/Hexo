#header
  padding 20px 0
  background-color #800
  color #ff9000
  border-top 5px solid black
  
  hgroup
    position relative
    @media screen and (max-width: 1260px)
      margin 0 10px 0 20px
      width auto

  a
    color #ff9000
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1
    display inline

  h2
    font-weight normal
    font-size 1.2em
    font-family font-default
    line-height 1
    position absolute
    top 37px
    left 110px
    @media screen and (max-width: 760px)
      font-size 1em
    @media screen and (max-width: 1260px)
      top 5px
  
  #main-nav
    font-family font-default
    line-height 2.5em
    position absolute    
    bottom -25px
    right 10px
    @media screen and (max-width: 1260px)
      right 0
    
    ul
      list-style none
      li
        float left
        margin-left 30px